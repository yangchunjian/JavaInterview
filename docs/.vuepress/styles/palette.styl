/*手机*/
@media screen and (max-width:600px) {
  .footer{
    display none;
  }
}
/*平板*/
@media screen and (min-width:600px) and (max-width:960px) {
  .main-wrapper .main-left {
    margin-left: 135px;
  }
  .footer{
    display none;
  }

}
/*PC*/
@media screen and (min-width:960px){
  //设置归档文件距离左侧菜单距离
  .main-wrapper .main-left {
    margin-left: 135px;
  }
}

//设置底部不展示
@media screen {
  .no-sidebar .footer {
    display :none;
  }
  .sidebar-open .footer {
    display :none;
  }
}

//设置评论底部不可见
.v[data-class="v"] .txt-right {
  display :none;
}

//设置评论M图标不可见且不可点击
.v[data-class="v"] .vrow .vcol.vcol-30 {
  visibility: hidden;
}